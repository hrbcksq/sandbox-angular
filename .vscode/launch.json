{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Attach to Chrome",
            "port": 9222,
            "url": "http://localhost:4200/project/brief",
            "sourceMaps": true,
            "trace": "verbose",
            "webRoot": "${workspaceRoot}/src",
            "userDataDir": "${workspaceRoot}/.vscode/chrome",
            "sourceMapPathOverrides": {
                "webpack:///*": "/*"
            }
        }
    ]
}